@model AccountingSubsystem.Domain.AggregatesModel.PagedList

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Companies" asp-action="CRUDCompany" asp-route-page="1">ابتدا</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Companies" asp-action="CRUDCompany" asp-route-page="@(Model.CurrentPage-1)">قبلی</a>
                </li>
            }

            @for (var pg = 1; pg <= Model.EndPage; pg++)
            {
                <li class="page-item @(pg==Model.CurrentPage? "active":"")">
                    <a class="page-link" asp-controller="Companies" asp-action="CRUDCompany" asp-route-page="@pg">@pg</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Companies" asp-action="CRUDCompany" asp-route-page="@(Model.CurrentPage+1)">بعدی</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Companies" asp-action="CRUDCompany" asp-route-page="@(Model.EndPage)">انتها</a>
                </li>
            }

        </ul>
    }

</div>