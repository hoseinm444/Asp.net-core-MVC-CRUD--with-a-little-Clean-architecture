@model AccountingSubsystemIdentity.Models.InvoiceHeader.UpdateInvoiceHeaderViewModel
}

<h1 style="text-align:center">ویرایش سربرگ فاکتور </h1>
<form method="post" action="UpdateInvoiceHeader" class="mt-4">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <section>
                @* <form id="CompanyRegisteration" method="post">*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*form-control,form-group///for learning purpose*@
                <div class="form-group">
                    <label class="form-label" type="hidden"></label>
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <span asp-validation-for="Id" class="text-danger" type="hidden"></span>
                </div>
                <div class="form-group">
                    <label asp-for="From" class="form-label"></label>
                    <input asp-for="From" class="form-control" />
                    <span asp-validation-for="From" class="text-danger"></span>
                </div>

                <div class="form-group pt-1">
                    <label asp-for="To" class="form-label"></label>
                    <input asp-for="To" class="form-control" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>

                <div class="form-group pt-1">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group pt-1">
                    <label asp-for="Subject" class="form-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group pt-1">
                    <label asp-for="IssueDate" class="form-label"></label>
                    <input asp-for="IssueDate" class="form-control" />
                    <span asp-validation-for="IssueDate" class="text-danger"></span>
                </div>
            </section>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row pt-3">
        <div class="col-4"></div>
        <div class="col-md-2">
            <a type="button" class="w-75 h-100 btn-lg btn-danger text-center fw-bold" href="@Url.Action("CRUDInvoiceHeader","InvoiceHeader")">بازگشت</a>
        </div>
        <div class="col-3">

            <button type="submit" class="w-50 btn-lg btn-primary" asp-controller="InvoiceHeader" asp-action="UpdateInvoiceHeader">ذخیره</button>
        </div>
        <div class="col-3"></div>
    </div>
</form>
